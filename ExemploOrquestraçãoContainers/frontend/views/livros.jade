doctype html
html
  head
    title Livros disponíveis
    style.
      body { font-family: Arial, sans-serif; padding: 20px; }
      h1 { color: #2c3e50; }
      .livro { display: flex; margin-bottom: 20px; border-bottom: 1px solid #ccc; padding-bottom: 10px; }
      .livro img { width: 120px; height: auto; margin-right: 20px; }
      .info { max-width: 600px; }
      .info h2 { margin: 0 0 5px 0; font-size: 18px; }
      .info p { margin: 0; font-size: 14px; }
      .botao { margin-top: 10px; }
      .botao a {
        display: inline-block;
        padding: 6px 12px;
        background-color: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        font-size: 14px;
      }
      .botao a:hover {
        background-color: #2980b9;
      }

  body
    h1 Livros disponíveis

    each livro in livros
      .livro
        img(src=livro.imagem alt=livro.titulo)
        .info
          h2= livro.titulo
          p Autor: #{livro.autor}
          p Preço: R$ #{livro.preco.toFixed(2)}
          p Em estoque: #{livro.estoque}
          .botao
            a(href=`/livros/${livro._id}`) Comprar